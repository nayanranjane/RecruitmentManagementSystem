@model IEnumerable<RecruitmentAdministrationSystemProject.Models.JobPost>

@{
    ViewBag.Title = "MyJobPosts";
}
<header>
    <link href="~/Content/all.css" rel="stylesheet"/>
</header>
<div class="HeaderClass"><h2>My Posts</h2>
    <div><button class="buttonClassDefault">
    @Html.ActionLink("Create New", "Create", null, new {@class= "action-link" })
</button></div>
    </div>


<table class="table table-striped table-bordered interview-Table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CTC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoOfOpening)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequiredBatch)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Company.CompanyUrl)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CTC)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoOfOpening)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RequiredExperience)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Company.CompanyUrl)
        </td>
        <td>
            <div class="container-list">
                
                    @Html.ActionLink("Details", "Details", new { id = item.JobId }, new {@class= "action-link DetailsButton buttonClass" })
              
                    @Html.ActionLink("Delete", "Delete", new { id = item.JobId }, new { @class = "action-link DeleteButton buttonClass2" })
              
            </div>
        </td>
    </tr>
}

</table>
