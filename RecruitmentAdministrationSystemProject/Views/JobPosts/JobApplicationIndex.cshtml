@model IEnumerable<RecruitmentAdministrationSystemProject.Models.JobApplication>

@{
    ViewBag.Title = "JobApplicationIndex";
}

<h2>JobApplicationIndex</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped ">
    <tr>
        <th></th>
        <th>
        @Html.DisplayNameFor(model => model.User.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobPost.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AbleToReallocation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrevCompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WorkExperience)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoticePeriod)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.ApplicationDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@Url.Content(item.User.Img)" height="20px" width="20px" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobPost.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AbleToReallocation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrevCompanyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WorkExperience)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoticePeriod)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.ApplicationDate)
        </td>
        <td>
            @Html.ActionLink("Details", "ApplicationDetails", new { id = item.ApplicationId }) |
            @Html.ActionLink("Delete", "ApplicationDelete", new { id = item.ApplicationId })
        </td>
    </tr>
}

</table>
