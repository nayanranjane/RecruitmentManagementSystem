@model IEnumerable<RecruitmentAdministrationSystemProject.Models.JobPost>

@{
    ViewBag.Title = "Index2";
}

<h2>Index2</h2>

@using (Html.BeginForm("Index2", "JobPosts"))
{
    <span class="align-content-lg-center">Search :  </span>
    <input type="text" placeholder="Search Jobs.." name="search" />
    <input type="submit" value="Search" />
    <br />
    <br />
}
<table class="table table-striped table-bordered">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CTC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoOfOpening)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.RequiredBatch)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Company.CompanyUrl)
        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="@Url.Content(item.Company.User.Img)" height="25px" width="25px">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CTC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoOfOpening)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.RequiredBatch)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Company.CompanyUrl)
            </td>

            @if (User.Identity.IsAuthenticated && (User.IsInRole("Company") || User.IsInRole("Company")))
            {
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.JobId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.JobId })
                </td>
            }
            else
            {
                <td> @Html.ActionLink("Details", "Details", new { id = item.JobId }) |@Html.ActionLink("Apply", "Apply", "JobApplication", new { id = item.JobId }, null)</td>
            }
        </tr>
    }

</table>
