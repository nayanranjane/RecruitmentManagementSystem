@model RecruitmentAdministrationSystemProject.Models.Interview

@{
    ViewBag.Title = "Create";
}
<header>
    <link href="@Url.Content("~/Content/interview.css")" rel="stylesheet" />
</header>
<h2>Create</h2>

<body>
    <div class="main">
        <div class="register">
            <h2>Interview Details</h2>
            @using (Html.BeginForm("Create", "Interview", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="singup-form">
                    <div class="hiddenContent">
                        <label for="Name">UserId</label>
                        <div class="input-container">
                            @Html.EditorFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div>
                        <label for="Name">Staff</label>
                        <div class="input-container drList">
                            @Html.DropDownListFor(model => model.StaffID, new SelectList(ViewBag.staffList, "StaffId", "Name"), "Select staff", new { @class = "form-control drList" })
                            @Html.ValidationMessageFor(model => model.StaffID, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    <div>
                        <label for="Name">Venue</label>
                        <div class="input-container">
                            @Html.EditorFor(model => model.MettingId, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MettingId, "", new { @class = "text-danger" })
                        </div>

                    </div>
                    <div>
                        <label for="Name">InterviewData</label>
                        <div class="input-container">

                            @Html.EditorFor(model => model.InterviewDate, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                            @Html.ValidationMessageFor(model => model.InterviewDate, "", new { @class = "text-danger" })
                        </div>

                    </div>
                    <div>
                        <label for="Name">Time</label>
                        <div class="input-container">
                            @Html.EditorFor(model => model.InterviewTime, new { htmlAttributes = new { @class = "form-control", @type = "time" } })
                            @Html.ValidationMessageFor(model => model.InterviewTime, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div>
                        <label for="Name">Description</label>
                        <div class="input-container">
                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="submit-btn-container">
                        <input type="submit" value="Submit" name="submit" id="submit" />

                    </div>
                </div>
            }
        </div>

    </div>

</body>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
