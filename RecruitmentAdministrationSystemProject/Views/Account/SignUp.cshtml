@model RecruitmentAdministrationSystemProject.Models.User

@{
    ViewBag.Title = "SignUp";
    var ListOfRoles = (List<RecruitmentAdministrationSystemProject.Models.Role>)ViewBag.roles;
}
<header>
    <link href="@Url.Content("~/Content/SignIn.css")" rel="stylesheet" />
</header>

<body>
    <div class="main">
        <div class="register">
            <h2>Register Here</h2>
            @using (Html.BeginForm("SignUp", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
        <div class="singup-form">
            <div>
                <label for="Name">Name</label>

                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
            <div>
                <label for="Name">Username</label>

                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })

            </div>
            <div>
                <label for="Name">Password</label>
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

            </div>
            <div>
                <label for="Name">Confirm Password</label>
                @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })

            </div>
            <div>
                <label for="Name">Email</label>

                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

            </div>
            <div>
                <label for="Name">Image</label>
                @*@Html.LabelFor(model => model.Img, htmlAttributes: new { @class = "control-label col-md-2" })*@

                <input type="file" name="ImageFile" />

            </div>
            <div>
                <label for="Name">MobileNo</label>
                @Html.EditorFor(model => model.MobileNo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MobileNo, "", new { @class = "text-danger" })
            </div>
            <div>
                <label for="Name">Location</label>
                @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger" })
            </div>
            <div>
                <label for="Name">Role</label>
                @*                    <div class="col-md-10">*@
                <div class="radio-container">

                    @foreach (var item in ListOfRoles)
                    {
                        @Html.RadioButtonFor(model => model.RoleId, item.RoleId)@item.RoleName;
                    }
                </div>
            </div>
        </div>
        <div class="submit-btn-container">
            <input type="submit" value="Submit" name="submit" id="submit" />
        </div>
            }

        </div>
    </div>
</body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
