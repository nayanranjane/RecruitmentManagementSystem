@model RecruitmentAdministrationSystemProject.Models.User

@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <link href="@Url.Content("~/Content/Login.css")" rel="stylesheet" />
</head>
<link href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.0/sweetalert.min.js">
</script>


<body>
    @if (TempData["ErrorMessage"] != null)
    {
        <script>swal("Login Failed", "Enter Correct UserId Password", "error")</script>
    }
    @if (TempData["UserCreated"] != null)
    {
        <script>swal("User Created", "Login to access account", "success")</script>
    }
    @using (Html.BeginForm("Login", "Account"))
    {
        @Html.AntiForgeryToken()
        <div class="form-page">
            <div class="form-container">
                <h2>Login</h2>
                @Html.Editor("username", new { htmlAttributes = new { @class = "form-input-field", @placeHolder = "User Name" } })

                @Html.Editor("password", new { htmlAttributes = new { @class = "form-input-field", @placeHolder = "Your Password", @type = "password" } })


                <button class="form-input-button login" type="submit">Login</button>

                @*<button class="form-input-button singup" type="button">
                    </button>*@
                @Html.ActionLink("Sign Up", "signup", null, new { @class = "form-input-button singup" })

            </div>

        </div>

