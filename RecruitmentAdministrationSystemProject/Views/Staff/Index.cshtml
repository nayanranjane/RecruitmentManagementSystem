@model IEnumerable<RecruitmentAdministrationSystemProject.Models.Staff>

@{
    ViewBag.Title = "Index";
}
<header>
    <link href="~/Content/all.css" rel="stylesheet"/>
</header>

<div class="HeaderClass2"><h2>Index</h2></div>


@if (Model.Count() != 0)
{
    <table class="table box-shadow">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Designation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isAuthenticated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company.CompanyUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Designation)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.isAuthenticated)*@
                    @if (item.isAuthenticated == false)
                    {
                        <div>Authenticated</div>
                    }
                    else
                    {
                   <div>Unauthenticate</div>
                    }

<td>
                    @Html.DisplayFor(modelItem => item.Company.CompanyUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Name)
                </td>
                <td>
                    @if (item.isAuthenticated == false)
                    {
                    <button type="button" class="btn btn-success text-light">@Html.ActionLink("Aprove", "Authenticate", new { id = item.StaffId })</button>
                    }
                    else
                    {
                    <button type="button" class="btn btn-danger text-light"> @Html.ActionLink("Disaprove", "Disapprove", new { id = item.StaffId })</button>
                    }
                </td>
            </tr>
        }

    </table>

}
else
            {
                <h4>No record Found</h4>
            }
