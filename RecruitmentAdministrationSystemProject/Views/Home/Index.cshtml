@{
    ViewBag.Title = "Home Page";
}
<head>
    <!-- JavaScript Bundle with Popper -->
    <link href="~/Content/HomeIndex.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.0/sweetalert.min.js">
    </script>
</head>


@if (TempData["SuccessMessage"] != null)
{
    <script>swal("Login Successfull", "Search for new Opportunity", "success")</script>
}



<body style="padding:0;">
<div class="body-conatiner">
            <div class="image-carousel">
                <div class="body-image-container image01"></div>
                <div class="body-image-container image02"></div>
                <div class="body-image-container image03"></div>
            </div>
            <div class="search-container">
                <div class="search-headers">
                    <h2>Your Dream</h2>
                    <h3>Job Is Waiting</h3>
                    <div class="Jobsearch">
                        @using (Html.BeginForm("Index2", "JobPosts"))
                        {
                            <div>
                                <i class="fa-solid fa-magnifying-glass"></i>
                            </div>
                            <input type="text" placeholder="Search By Skill, Job Title & Company" name="search" class="JobsearchInput" />
                            <input type="submit" value="Find Now" class="@*buttonDiv*@ JobsearchButton" />
                          
                        }
                    </div>
                </div>
            </div>
        </div>
       
</body>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
